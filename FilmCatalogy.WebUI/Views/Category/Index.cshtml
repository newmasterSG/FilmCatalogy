@model List<FilmCatalogy.Application.Models.Category.CategoryDTO>
@{
    ViewData["Title"] = "Category List";
}

<a class="navbar-brand" asp-area="" asp-controller="Category" asp-action="Add">Add</a>
<a class="navbar-brand" asp-area="" asp-controller="Category" asp-action="List">List</a>

<h1>Category List</h1>

<a asp-action="Create" class="btn btn-primary">Create New</a>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>
                            <a asp-action="Update" asp-route-id="@category.Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No films found.</p>
}
